  <script>
    // Carousel functionality
    const carousel = document.getElementById('carousel');
    const totalSlides = carousel.children.length;
    const dots = document.querySelectorAll('.carousel-dot');
    let index = 0;
    let intervalId;

    function showSlide() {
      carousel.style.transform = `translateX(-${index * 100}%)`;
      
      // Update dots
      dots.forEach((dot, i) => {
        if (i === index) {
          dot.classList.add('active');
        } else {
          dot.classList.remove('active');
        }
      });
    }

    function startAutoSlide() {
      intervalId = setInterval(() => {
        index = (index + 1) % totalSlides;
        showSlide();
      }, 4000);
    }

    function stopAutoSlide() {
      clearInterval(intervalId);
    }

    // Button controls
    document.getElementById('next').onclick = () => {
      index = (index + 1) % totalSlides;
      showSlide();
      stopAutoSlide();
      startAutoSlide();
    };

    document.getElementById('prev').onclick = () => {
      index = (index - 1 + totalSlides) % totalSlides;
      showSlide();
      stopAutoSlide();
      startAutoSlide();
    };

    // Dot controls
    dots.forEach((dot, i) => {
      dot.addEventListener('click', () => {
        index = i;
        showSlide();
        stopAutoSlide();
        startAutoSlide();
      });
    });

    // Start auto slide
    startAutoSlide();

    // Add to cart functionality
    const cartCount = document.getElementById('cart-count');
    let count = 0;

    document.querySelectorAll('.add-to-cart').forEach(button => {
      button.addEventListener('click', function() {
        count++;
        cartCount.textContent = count;
        
        // Add animation to cart button
        const cartButton = document.getElementById('cart-button');
        cartButton.classList.add('animate-pulse-glow');
        setTimeout(() => {
          cartButton.classList.remove('animate-pulse-glow');
        }, 2000);
        
        // Show notification
        const productName = this.getAttribute('data-product');
        showNotification(`${productName} telah ditambahkan ke keranjang!`);
      });
    });

    // Notification function
    function showNotification(message) {
      const notification = document.createElement('div');
      notification.className = 'fixed top-20 right-6 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg z-50 animate-fade-slide-down';
      notification.innerHTML = `
        <div class="flex items-center">
          <i class="bi bi-check-circle-fill mr-2"></i>
          <span>${message}</span>
        </div>
      `;
      document.body.appendChild(notification);
      
      setTimeout(() => {
        notification.classList.add('opacity-0');
        setTimeout(() => {
          document.body.removeChild(notification);
        }, 300);
      }, 3000);
    }

    // Back to top button
    const backToTopButton = document.getElementById('back-to-top');
    
    window.addEventListener('scroll', () => {
      if (window.scrollY > 300) {
        backToTopButton.classList.remove('opacity-0', 'invisible');
        backToTopButton.classList.add('opacity-100', 'visible');
      } else {
        backToTopButton.classList.add('opacity-0', 'invisible');
        backToTopButton.classList.remove('opacity-100', 'visible');
      }
    });
    
    backToTopButton.addEventListener('click', () => {
      window.scrollTo({
        top: 0,
        behavior: 'smooth'
      });
    });

    // Smooth scroll for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth'
          });
        }
      });
    });

    // Animate elements on scroll
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver(function(entries) {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('animate-fade-slide-up');
          observer.unobserve(entry.target);
        }
      });
    }, observerOptions);

    document.querySelectorAll('.card-hover').forEach(el => {
      observer.observe(el);
    });
  </script>
