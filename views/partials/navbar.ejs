<!-- Navbar -->
<nav class="bg-white shadow-lg sticky top-0 z-50 transition-all duration-500">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16 items-center">

      <!-- Logo -->
      <a href="/" class="flex items-center space-x-2 group">
        <div class="w-10 h-10 rounded-full flex items-center justify-center transform transition-transform duration-300 group-hover:-rotate-12 group-hover:translate-x-1">
          <img src="/img/favicon.webp" alt="Logo" class="w-6 h-6">
        </div>
        <span class="text-2xl font-bold text-gray-800">Cemilanceria</span>
      </a>

      <!-- Menu Desktop -->
      <div class="hidden md:flex items-center space-x-8">
        <a href="/" class="text-gray-700 hover:text-amber-500 font-medium">Beranda</a>
        <a href="/products" class="text-gray-700 hover:text-amber-500 font-medium">Produk</a>
        <a href="/about" class="text-gray-700 hover:text-amber-500 font-medium">Tentang Kami</a>
        <a href="/contact" class="text-gray-700 hover:text-amber-500 font-medium">Kontak</a>
      </div>

      <!-- Right Section -->
      <div class="flex items-center space-x-5">
        <!-- Keranjang (tampil di semua layar) -->
        <div class="relative cursor-pointer group">
          <i class="bi bi-cart3 text-gray-700 text-xl group-hover:text-amber-500 transition-all"></i>
          <span id="cartCount" class="absolute -top-2 -right-2 bg-amber-500 text-white text-xs font-semibold rounded-full px-1.5 py-0.5">0</span>

          <!-- Tooltip -->
          <div class="absolute top-9 right-0 w-56 bg-white shadow-lg rounded-lg p-3 opacity-0 group-hover:opacity-100 invisible group-hover:visible transition-all duration-300">
            <p class="text-sm text-gray-700 font-medium mb-1">Keranjang Anda</p>
            <hr class="my-2">
            <p id="cartTooltip" class="text-gray-500 text-sm">Belum ada produk</p>
              <div class="mt-3 flex gap-2">
              <a href="/cart" class="flex-1 bg-amber-500 text-white text-center py-1 rounded-full text-sm font-medium hover:bg-amber-600 transition-all">Lihat Keranjang</a>
              <button onclick="clearCart()" class="bg-red-500 text-white px-2 py-1 rounded-full text-sm font-medium hover:bg-red-600 transition-all">Kosongkan</button>
            </div>
          </div>
        </div>

        <!-- Tombol Login (hanya desktop) -->
        <% if (typeof user !== 'undefined' && user) { %>
          <div id="profileContainer" class="relative">
            <button id="profileButton" class="flex items-center space-x-2 text-gray-700 hover:text-amber-600 focus:outline-none transition duration-300">
              <div class="w-8 h-8 rounded-full bg-amber-500 flex items-center justify-center text-white font-semibold">
                <span><%= user.name[0] %></span>
              </div>
              <span class="hidden md:block font-medium"><%= user.name %></span>
                <i class="fa fa-chevron-down text-xs"></i>
            </button>

            <!-- Dropdown Menu -->
            <div id="profileDropdown" class="absolute right-0 mt-2 w-56 bg-white rounded-md shadow-lg py-1 z-10 hidden transition-all duration-300 transform origin-top-right">
                <div class="px-4 py-2 border-b border-gray-200">
                    <p class="text-sm font-medium text-gray-900"><%= user.name %></p>
                    <p class="text-sm text-gray-500 truncate"><%= user.email %></p>
                </div>
                <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                    <i class="fas fa-user mr-2"></i>Profil Saya
                </a>
                <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                    <i class="fas fa-cog mr-2"></i>Pengaturan
                </a>
                <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                    <i class="fas fa-bell mr-2"></i>Notifikasi
                </a>
                <div class="border-t border-gray-200"></div>
                <a href="/logout" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                    <i class="fas fa-sign-out-alt mr-2"></i>Keluar
                </a>
            </div>
          </div>
          <script>
            document.addEventListener('DOMContentLoaded', function() {
                const profileButton = document.getElementById('profileButton');
                const profileDropdown = document.getElementById('profileDropdown');
                let dropdownTimeout;

                function showDropdown() {
                    clearTimeout(dropdownTimeout);
                    profileDropdown.classList.remove('hidden');
                    profileDropdown.offsetHeight;
                    profileDropdown.classList.add('opacity-100', 'scale-100');
                    profileDropdown.classList.remove('opacity-0', 'scale-95');
                }

                function hideDropdown() {
                    dropdownTimeout = setTimeout(() => {
                        profileDropdown.classList.add('opacity-0', 'scale-95');
                        profileDropdown.classList.remove('opacity-100', 'scale-100');
                        setTimeout(() => {
                            profileDropdown.classList.add('hidden');
                        }, 300);
                    }, 150);
                }

         
                profileButton.addEventListener('mouseenter', showDropdown);
                profileButton.addEventListener('mouseleave', hideDropdown);

                profileDropdown.addEventListener('mouseenter', () => {
                    clearTimeout(dropdownTimeout);
                });
                profileDropdown.addEventListener('mouseleave', hideDropdown);

                document.addEventListener('click', function(event) {
                    const profileContainer = document.getElementById('profileContainer');
                    if (!profileContainer.contains(event.target)) {
                        clearTimeout(dropdownTimeout);
                        profileDropdown.classList.add('opacity-0', 'scale-95');
                        profileDropdown.classList.remove('opacity-100', 'scale-100');
                        setTimeout(() => {
                            profileDropdown.classList.add('hidden');
                        }, 300);
                    }
                });

                profileButton.addEventListener('click', function(e) {
                    e.stopPropagation();
                    if (profileDropdown.classList.contains('hidden')) {
                        showDropdown();
                    } else {
                        clearTimeout(dropdownTimeout);
                        profileDropdown.classList.add('opacity-0', 'scale-95');
                        profileDropdown.classList.remove('opacity-100', 'scale-100');
                        setTimeout(() => {
                            profileDropdown.classList.add('hidden');
                        }, 300);
                    }
                });
            });
          </script>
        <% } else { %>
          <a href="/login" class="hidden md:block bg-amber-500 hover:bg-amber-600 text-white px-6 py-2 rounded-full font-medium transition-all">Masuk</a>
        <% } %>

        <!-- Tombol Hamburger (mobile only) -->
        <button id="mobile-menu-button" class="md:hidden text-gray-700 hover:text-amber-500 transition-transform duration-300">
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="md:hidden hidden bg-white border-t shadow-inner">
    <div class="px-2 pt-2 pb-3 space-y-1 animate-fade-slide-down">
      <a href="/" class="block px-3 py-2 rounded-md text-gray-700 hover:bg-gray-100 font-medium">Beranda</a>
      <a href="/products" class="block px-3 py-2 rounded-md text-gray-700 hover:bg-gray-100 font-medium">Produk</a>
      <a href="/about" class="block px-3 py-2 rounded-md text-gray-700 hover:bg-gray-100 font-medium">Tentang Kami</a>
      <a href="/contact" class="block px-3 py-2 rounded-md text-gray-700 hover:bg-gray-100 font-medium">Kontak</a>
      <a href="/login" class="block bg-amber-500 text-white px-4 py-2 rounded-full text-center font-medium hover:bg-amber-600 transition-all">Masuk</a>
    </div>
  </div>
</nav>

<!-- Script -->
<script>
  const menuBtn = document.getElementById("mobile-menu-button"),
        menu = document.getElementById("mobile-menu"),
        count = document.getElementById("cartCount"),
        tip = document.getElementById("cartTooltip");

  // Toggle menu
  menuBtn.onclick = () => {
    menu.classList.toggle("hidden");
    menu.classList.add(menu.classList.contains("hidden") ? "animate-fade-slide-up" : "animate-fade-slide-down");
    setTimeout(() => menu.classList.remove("animate-fade-slide-up"), 250);
  };

  // Keranjang
  let cart = JSON.parse(localStorage.getItem('cart') || "[]");
  window.updateCart = () => {
    cart = JSON.parse(localStorage.getItem('cart') || "[]");
    const totalQty = cart.reduce((sum, it) => sum + (it.qty || 1), 0);
    count.textContent = totalQty;
    
    // Update tooltip dengan daftar produk
    if (totalQty === 0) {
      tip.textContent = "Belum ada produk";
    } else {
      const summary = cart.slice(0, 3).map(item => 
        `${item.product} (${item.qty}x)`
      ).join(', ');
      tip.textContent = totalQty > 3 
        ? `${summary}, +${totalQty - 3} lainnya` 
        : summary;
    }
  };
  document.addEventListener("DOMContentLoaded", () => window.updateCart());


  function clearCart() {
    localStorage.removeItem('cart');
    cart = [];
    updateCart();
  }
</script>

<style>
  @keyframes fade-slide-down { from{opacity:0;transform:translateY(-10px);} to{opacity:1;transform:translateY(0);} }
  @keyframes fade-slide-up { from{opacity:1;transform:translateY(0);} to{opacity:0;transform:translateY(-10px);} }
  .animate-fade-slide-down{animation:fade-slide-down .25s ease-out;}
  .animate-fade-slide-up{animation:fade-slide-up .25s ease-in;}

</style>
